{% extends 'PatoCoreBundle:Default:base.html.twig' %}

{% block mainbar_icon %}icon-building{% endblock %}
{% block mainbar_title %}Empresas{% endblock %}

{% block mainbar_breadcrumb %}
    <a href="{{ path('pato_core_homepage') }}"><i class="icon-home"></i> Inicio</a> /
    Clientes

{% endblock %}

{% block content%}

    <div class="row">
        <div class="col-lg-12">
            <a href="{{ path('clients_company_new') }}" class="btn-lg btn-primary">Adicionar nova empresa</a>
            <br/><br/>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="widget">
                <div class="widget-head">
                    <div class="pull-left">Lista de empresas</div>
                    <div class="widget-icons pull-right">
                    </div>
                    <div class="clearfix"></div>
                </div>

                <div class="widget-content">
                    <div class="row">
                        <div class="col-md-12">
                            <table class="table table-striped table-bordered table-hover">
                                <thead>
                                <tr>
                                    <th>Empresa</th>
                                    <th>Endereço</th>
                                    <th>Email</th>
                                    <th>Telefone</th>
                                    <th>Ações</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for entity in pagination %}
                                    <tr>
                                        <td>{{ entity.name }}</td>
                                        <td>{{ entity.address }}</td>
                                        <td>{{ entity.email }}</td>
                                        <td>{{ entity.phone }}</td>
                                        <td>
                                            <ul class="nav nav-pills">
                                                <li>
                                                    <a href="{{ path('clients_company_show', { 'id': entity.id }) }}"><i class="icon-search"></i></a>
                                                </li>
                                                <li>
                                                    <a href="{{ path('clients_company_edit', { 'id': entity.id }) }}"><i class="icon-edit"></i></a>
                                                </li>
                                            </ul>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <div class="widget-foot">
                        {{ knp_pagination_render(pagination) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
